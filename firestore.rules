rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * Helper Functions
     */
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * User profiles can be read by anyone, but only written by the owner.
     * This allows other users (e.g., students) to see basic info of others if needed,
     * but secures their private data.
     */
    match /users/{userId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn(); // Allow listing for features like leaderboards, etc.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isOwner(userId);
      allow delete: if false; // Prevent users from deleting their own accounts from the client
    }
    
    /**
     * Teacher profiles are public and can be read by any authenticated user.
     * This is necessary for students to browse and select teachers.
     * Only the teacher themselves (who is also a user) can create or update their profile.
     */
    match /teachers/{teacherId} {
      allow get, list: if isSignedIn();
      allow create, update: if isOwner(teacherId);
      allow delete: if false;
    }
  }
}
